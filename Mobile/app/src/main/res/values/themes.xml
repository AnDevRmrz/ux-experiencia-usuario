<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Meditime" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Meditime" parent="Base.Theme.Meditime" />

    <style name="MainButton" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">@color/AzulMediTime</item>
        <item name="android:minWidth">146dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="SecondaryButton" parent="MainButton">
        <item name="backgroundTint">@color/ArenaMediTime</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
    </style>

    <style name="TertiaryButton" parent="MainButton">
        <item name="backgroundTint">@color/GrisOscuroMediTime</item>
    </style>

    <style name="SnoozeButton" parent="SecondaryButton">
        <item name="backgroundTint">@color/AmarilloClaroAlarmaMediTime</item>
    </style>

    <style name="CompactTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">240dp</item>
        <item name="boxStrokeColor">@color/text_input_stroke</item>
        <item name="hintTextColor">@color/text_input_hint</item>
        <item name="android:textColorHint">@color/text_input_hint</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="CompactSelectLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">240dp</item>
        <item name="boxStrokeColor">@color/text_input_stroke</item>
        <item name="hintTextColor">@color/text_input_hint</item>
        <item name="android:textColorHint">@color/text_input_hint</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="TimeTextInputLayout" parent="CompactTextInputLayout">
        <item name="startIconDrawable">@drawable/baseline_access_time_24</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="endIconMode">none</item>
    </style>
</resources>