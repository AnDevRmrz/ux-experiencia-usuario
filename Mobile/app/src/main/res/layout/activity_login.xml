<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancoMediTime"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ctnLogoIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ingreso_container_margin_bottom"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgLogoIngreso"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_marginTop="@dimen/ingreso_logo_margin_top"
            android:contentDescription="@string/content_logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txtIngresarIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ingreso_title_margin_top"
            android:text="@string/ingresar"
            android:textColor="@color/black"
            android:textSize="@dimen/ingreso_title_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctnInputsIngreso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="@dimen/ingreso_inputs_margin_top"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ctnButtonsIngreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctnLogoIngreso"
        app:layout_constraintVertical_bias="0.8">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputNombreIngreso"
            style="@style/CompactTextInputLayout"
            android:layout_marginBottom="@dimen/ingreso_input_spacing"
            android:hint="@string/correo_electronico">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputContrasenaIngreso"
            style="@style/CompactTextInputLayout"
            android:hint="@string/contrasena">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text_size" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctnButtonsIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ingreso_buttons_margin_top"
        android:layout_marginBottom="@dimen/ingreso_buttons_margin_bottom"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctnInputsIngreso"
        app:layout_constraintVertical_bias="@dimen/ingreso_buttons_vertical_bias">

        <Button
            android:id="@+id/btnInitIngreso"
            style="@style/MainButton"
            android:onClick="navigateToPrincipalScreen"
            android:text="@string/iniciar"
            app:icon="@drawable/baseline_arrow_forward_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ingreso_social_margin_top"
            android:layout_marginBottom="@dimen/ingreso_social_margin_bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="@dimen/social_icon_size"
                android:layout_height="@dimen/social_icon_size"
                android:layout_marginHorizontal="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/content_facebook"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/facebook_icon" />

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="@dimen/social_icon_size"
                android:layout_height="@dimen/social_icon_size"
                android:layout_marginHorizontal="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/content_google"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/google_icon" />

            <ImageView
                android:id="@+id/imgApple"
                android:layout_width="@dimen/social_icon_size"
                android:layout_height="@dimen/social_icon_size"
                android:layout_marginHorizontal="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/content_apple"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/apple_icon" />
        </LinearLayout>

        <Button
            android:id="@+id/btnBackIngreso"
            style="@style/SecondaryButton"
            android:layout_marginBottom="@dimen/ingreso_back_margin_bottom"
            android:onClick="goBackToMainActivity"
            android:text="@string/regresar"
            app:icon="@drawable/baseline_arrow_back_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
