<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancoMediTime">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgAddMedicine"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="41dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/medicine" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvMedicine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:backgroundTint="@android:color/transparent"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="navegateToMedicineDetails"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/AzulMediTime">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:minWidth="320dp"
                            android:minHeight="74dp"
                            android:text="@string/medicine1"
                            android:textColor="@color/GrisMedicineMediTime"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvMedicine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="34dp"
                        android:backgroundTint="@android:color/transparent"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="navegateToMedicineDetails"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/AzulMediTime">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:minWidth="320dp"
                            android:minHeight="74dp"
                            android:text="@string/medicine2"
                            android:textColor="@color/GrisMedicineMediTime"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvMedicine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="@android:color/transparent"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="navegateToMedicineDetails"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/AzulMediTime">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:minWidth="320dp"
                            android:minHeight="74dp"
                            android:text="@string/medicine3"
                            android:textColor="@color/GrisMedicineMediTime"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <Button
                    android:id="@+id/btnRegresarConfiguraciones"
                    style="@style/SecondaryButton"
                    android:layout_marginBottom="61dp"
                    android:onClick="goBackToPrincipalActivity"
                    android:text="@string/regresar"
                    app:icon="@drawable/baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="1.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <include layout="@layout/base_drawer_activity" />

</androidx.drawerlayout.widget.DrawerLayout>

